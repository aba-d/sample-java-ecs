#!/bin/bash
# Run Maven build and tests before commit

echo "ğŸ”¹ Running Maven build and tests..."
mvn clean package -DskipTests
if [ $? -ne 0 ]; then
    echo "âŒ Maven build failed! Commit aborted."
    exit 1
fi

