#!/bin/bash
# Run Maven build and tests before commit

echo "🔹 Running Maven build and tests..."
mvn clean package -DskipTests
if [ $? -ne 0 ]; then
    echo "❌ Maven build failed! Commit aborted."
    exit 1
fi

mvn test
if [ $? -ne 0 ]; then
    echo "❌ Unit tests failed! Commit aborted."
    exit 1
fi

echo "✅ Maven build and tests passed. Proceeding with commit."
